<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="primary">#FFFF9800</color>
    <color name="primary_dark">#FFF57C00</color>
    <color name="primary_light">#FFFFE082</color>
    <color name="accent">#FFEB3B</color>
    <color name="primary_text">#FF212121</color>
    <color name="secondary_text">#FF212121</color>
    <color name="icons">#FF757575</color>
    <color name="divider">#FFBDBDBD</color>

    <!-- Base application theme. -->
    <style name="Theme.FlickerBrowser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="cardBackgroundColor">@color/primary</item>
    </style>
</resources>